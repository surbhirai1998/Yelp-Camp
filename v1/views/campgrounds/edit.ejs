<%include ../partials/header%>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit Camp</h1>
    <div style="margin:20px auto; width:30%;">
      <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post">
        <!--add method override in app.js-->
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="Name"
            name="camp[name]"
            value="<%=camp.name%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="URL"
            name="camp[url]"
            value="<%=camp.url%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="Description"
            name="camp[description]"
            value="<%=camp.description%>"
          />
        </div>
        <div class="form-group">
          <input
            class="btn btn-primary btn-block"
            type="submit"
            value="Update"
          />
        </div>
      </form>
    </div>
  </div>
</div>
<%include ../partials/footer%>
