<%include ../partials/header%>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit Comment</h1>
    <div style="margin:20px auto; width:30%;">
      <form
        action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT"
        method="post"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%=comment.text%>"
            name="comment[text]"
          />
        </div>
        <div class="form-group">
          <input
            class="btn btn-primary btn-block"
            type="submit"
            value="Update"
          />
        </div>
      </form>
    </div>
  </div>
</div>
<%include ../partials/footer%>
